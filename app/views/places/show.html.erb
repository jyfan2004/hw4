<h1><%= @place["name"] %></h1>

<% if @current_user %>

  <div class="col-md-3 mt-4">
    <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-dark btn-lg">New Post</a>
  </div>

  <div class="row">
    <% for post in @posts %>
      <div class="col-md-4 mt-4">
        <h3><%= post["title"] %></h3>
        <p><%= post["posted_on"] %></p>
        <p><%= post["description"] %></p>
      </div>
    <% end %>
  </div>

 
<% end %>
<div class="col-md-3">
  <a href="/places" class="btn btn-dark mt-2">Back to All Places</a>
</div>